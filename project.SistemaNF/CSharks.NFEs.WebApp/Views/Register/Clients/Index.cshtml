@using CSharks.NFEs.Domain.Models;
@using CSharks.NFEs.Domain.Enums;
@model Client
@{
    ViewData["Title"] = "Shark NFE - Clientes";
}

<section class="col-8 mx-auto">
    <div class="mt-3">
        @await Html.PartialAsync("_MessageResult")
    </div>
    <form asp-action="Create" method="POST" class="row">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Nome ou Razão Social</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between px-0">
            <div class="form-group flex-grow-1">
                <label asp-for="CpfCnpj" class="control-label">CPF/CNPJ</label>
                <input asp-for="CpfCnpj" class="form-control" />
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
            <div class="form-group flex-grow-1">
                <label asp-for="Ie" class="control-label">Inscrição Estadual</label>
                <input asp-for="Ie" class="form-control" />
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
            <div class="form-group flex-grow-1">
                <label asp-for="Enrollment" class="control-label">Tipo de Pessoa</label>
                <select asp-for="Enrollment" class="form-control">
                    <option value="J">Pessoa Jurídica</option>
                    <option value="F">Pessoa Física</option>
                    @*<option value="E">Estrangeiro</option>*@
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <hr class="my-4"/>
        <div class="d-flex justify-content-between px-0">
            <div class="form-group flex-grow-1">
                <label asp-for="CEP" class="control-label">CEP</label>
                <input id="input-cep" asp-for="CEP" class="form-control" />
            </div>
            <div class="form-group flex-grow-1">
                <label asp-for="City" class="control-label">Cidade</label>
                <input id="input-city" class="form-control" readonly/>
                <input id="hidden-input-city" asp-for="City" type="hidden"/>
            </div>
            <div class="form-group flex-grow-1">
                <label asp-for="District" class="control-label">Bairro</label>
                <input id="input-district" asp-for="District" class="form-control" readonly />
            </div>
        </div>
        <div class="d-flex justify-content-between px-0">
            <div class="form-group flex-grow-1">
                <label asp-for="Address" class="control-label">Rua</label>
                <input id="input-address" asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ResidentialNumber" class="control-label">Número</label>
                <input asp-for="ResidentialNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn bg-shark text-white" style="width: 5rem;">Criar</button>
        </div>
    </form>
</section>

@section Scripts {
    <script type="text/javascript">

    </script>
}
