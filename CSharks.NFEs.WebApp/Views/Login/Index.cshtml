@using CSharks.NFEs.Domain.DTOs;
@model LoginDTO;
@{
    Layout = "_LayoutOff";
    ViewData["Title"] = "Shark NFE - Login";
}

<section>
    <div class="mt-3">
        @await Html.PartialAsync("_MessageResult")
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="text-center mb-4"> @ViewData["Title"]</h1>
                        <form asp-action="InputValidate" asp-controller="Login" method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Empresa</label>
                                <input asp-for="Cnpj" type="text" class="form-control">
                                @Html.ValidationMessageFor(x => x.Cnpj)
                            </div>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input asp-for="Login" type="text" class="form-control">
                                @Html.ValidationMessageFor(x => x.Login)
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control">
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">

    </script>
}
